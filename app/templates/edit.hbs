<h6>Edit the spot</h6>
{{#bs-form
  class="form"
  formLayout=formLayout
  model=model
  onSubmit=(action "editSpot")
as |form|
}}
  {{form.element
    controlType="input"
    label="Name"
    placeholder="Name"
    property="name"
    required=true
  }}
  {{form.element
    controlType="input"
    label="Address"
    placeholder="Address"
    property="address"
    required=true
  }}
  {{form.element
    controlType="input"
    label="Operating hours"
    property="hours"
  }}
  {{form.element
    controlType="textarea"
    label="Review"
    property="review"
  }}
  {{!-- {{bs-button
    defaultText="Save"
    type="dark"
    outline="true"
    class="button"
